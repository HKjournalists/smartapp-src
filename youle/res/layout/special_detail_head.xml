<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/time"
            android:layout_marginTop="10dp"
            android:gravity="right"
            style="@style/app_edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/special"
            style="@style/them_detail"
            android:layout_marginLeft="@dimen/app_frampadding"
            android:layout_marginRight="@dimen/app_frampadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_marginTop="@dimen/game_detail_provider"
            android:layout_width="match_parent"
            android:src="@color/line_gray"
            android:layout_height="1px"/>

    <LinearLayout
            android:id="@+id/newsLayout"
            style="@style/app_edge"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    <ImageView
            android:src="@color/line_gray"
            android:id="@+id/gray_line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    <RelativeLayout
            android:background="@color/line_gray"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <CheckBox
                android:id="@+id/allcheck"
                android:button="@drawable/check_box"
                android:layout_width="wrap_content"
                android:text="@string/allCheck"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/app_frampadding"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/installAll"
                android:layout_centerVertical="true"
                android:background="@color/green"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="@string/allDown"
                android:layout_marginRight="@dimen/app_frampadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>