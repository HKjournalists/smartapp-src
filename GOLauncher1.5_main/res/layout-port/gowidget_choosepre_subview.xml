<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal|center_vertical">
  
  	<ImageView 
  		android:id="@+id/upperhalf"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:scaleType="fitXY"
  		
  		android:background="@drawable/gowidget_showpic_bg_up"/>
  
  <LinearLayout 
  		android:id="@+id/downhalf"
		android:orientation="horizontal" 
		android:gravity="left"
  		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/gowidget_showpic_bg_down">
		<GridView android:id="@+id/widgetgridview"
			android:layout_width="30dp" android:layout_height="wrap_content"
			android:numColumns="4" android:layout_gravity="center_vertical"
			android:verticalSpacing="0dp" android:horizontalSpacing="0dp"
			android:stretchMode="columnWidth" 
			android:clickable="false"/>

		<com.jiubang.ggheart.components.DeskTextView
			android:layout_height="wrap_content" android:id="@+id/widgetstyletitle"
			android:layout_width="wrap_content" android:text="普通风格"
			android:layout_gravity="center_vertical"
			android:textColor="#ff000000" android:textSize="16sp" />
	</LinearLayout>
    
</LinearLayout>
