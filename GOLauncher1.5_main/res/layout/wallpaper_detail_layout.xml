<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.jiubang.ggheart.apps.gowidget.gostore.component.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_scrollview_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/scrollerview"
                android:layout_width="fill_parent"
                android:layout_height="257.6dp"
                android:layout_marginTop="4.8dip" />

            <!-- 下载按钮 -->

            <RelativeLayout
                android:id="@+id/gostore_wallpaper_wallpaper_detail_download_button_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13.8dip"
                android:layout_marginLeft="11.67dp"
                android:layout_marginRight="5.33dip"
                android:layout_marginTop="13.8dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gostore_wallpaper_detail_download_state_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/gostore_wapper_download_msg1"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cgostore_wallpaper_detail_download_button_TextView"
                    android:layout_width="90dip"
                    android:layout_height="27dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gostore_wallpaper_download_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/gostore_download"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!-- 下载进度条 -->

            <LinearLayout
                android:id="@+id/gostore_wallpaper_wallpaper_detail_download_layout"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9.33dp"
                android:layout_marginLeft="14.67dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/gostore_wallpaper_detail_download_progress"
                    style="@style/ProgressBarStyle"
                    android:layout_width="220dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:max="100" />

                <TextView
                    android:id="@+id/gostore_wallpaper_detail_download_percent_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="0%"
                    android:textColor="#404040"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cut_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>

            <!-- 设置为壁纸 -->

            <LinearLayout
                android:id="@+id/gostore_wallpaper_set_wallpaper_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="9.33dp"
                android:layout_marginTop="21.6dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/gostore_wallpaper_detail_set_wallpaper_button_TextView"
                    android:layout_width="118dip"
                    android:layout_height="28.8dip"
                    android:background="@drawable/gostore_wallpaper_download_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/gostore_set_wallpaper"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </com.jiubang.ggheart.apps.gowidget.gostore.component.MyScrollView>
</LinearLayout>