<?xml version="1.0" encoding="utf-8"?>

<com.jiubang.ggheart.apps.gowidget.taskmanager.TaskRunningStyle41Widget
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/layout_gobal"
		android:gravity="center_vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical" android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/layout_bar_bg">
			<RelativeLayout android:gravity="center_vertical"
				android:layout_width="fill_parent" android:layout_height="wrap_content">

				<TextView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_alignParentLeft="true"
					android:id="@+id/avail_img" android:layout_centerVertical="true"></TextView>

				<TextView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_alignParentLeft="true"
					android:id="@+id/avail_txt" android:textColor="#FFFFFF"
					android:paddingLeft="5dip" android:layout_centerVertical="true"></TextView>

				<TextView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:paddingRight="5dip"
					android:paddingLeft="5dip" android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:id="@+id/total_txt"
					android:scaleType="fitCenter" android:text=""></TextView>

				<!--  <ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true" android:id="@+id/link_img"
					android:layout_marginRight="8dip" android:layout_centerVertical="true"></ImageView> -->

			</RelativeLayout>
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_marginLeft="5dip" android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageButton android:layout_height="wrap_content"
				android:scaleType="fitCenter" android:layout_marginRight="5dip"
				android:layout_width="wrap_content" android:id="@+id/task_manager_refresh"></ImageButton>

			<ImageButton android:layout_height="fill_parent"
				android:id="@+id/task_manager_clean" android:scaleType="fitCenter"
				android:layout_width="wrap_content"></ImageButton>
		</LinearLayout>
	</LinearLayout>

</com.jiubang.ggheart.apps.gowidget.taskmanager.TaskRunningStyle41Widget>

