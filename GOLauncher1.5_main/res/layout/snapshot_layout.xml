<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snapshot_layout_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:background="@null"
         >

        <com.jiubang.ggheart.components.DeskButton
            android:id="@+id/snapshot_operation_recapture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/snapshot_icon_title_back"
            android:background="@null"
            android:textColor="@color/snapshot_icon_title_color"
            android:drawableTop="@drawable/snapshot_icon_back" />

        <com.jiubang.ggheart.components.DeskButton
            android:id="@+id/snapshot_operation_save"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/snapshot_icon_title_save"
            android:background="@null"
            android:textColor="@color/snapshot_icon_title_color"
            android:drawableTop="@drawable/snapshot_icon_save" />

        <com.jiubang.ggheart.components.DeskButton
            android:id="@+id/snapshot_operation_share"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/snapshot_icon_title_share"
            android:background="@null"
            android:textColor="@color/snapshot_icon_title_color"
            android:drawableTop="@drawable/snapshot_icon_share" />

        <com.jiubang.ggheart.components.DeskButton
            android:id="@+id/snapshot_operation_open"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/snapshot_icon_open"
            android:enabled="false"
            android:text="@string/snapshot_icon_title_open"
            android:textColor="@color/snapshot_icon_title_color" />

    </LinearLayout>

    <ImageView
        android:id="@+id/snapshot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:id="@+id/list_chooser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible" >

    </LinearLayout>

</RelativeLayout>