<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30px"
        android:background="@drawable/facebook_dialog_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/sharepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dip"
            android:gravity="center"
            android:src="@drawable/facebook_icon" />
        
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:text="@string/facebook_connect_succeed"
            android:textColor="#ff3076eb"
            android:textSize="17sp"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/summury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:text="@string/facebook_share_text"
            android:textColor="#ff5f5f5f"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/shareonfbtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip"
            android:background="@drawable/facebook_dialog_word_bg"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:paddingTop="10dip"
            android:text="@string/facebook_share_msg"
            android:textColor="#ff343434"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/buttoncontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp" >

            <Button
                android:id="@+id/remindlater"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/facebook_latersharebutton_selector"
                android:gravity="center"
                android:text="@string/facebook_share_remindlater"
                android:textColor="#ff343434"
                android:textSize="18sp" 
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/sharebutton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/yjzj_selector"
                android:gravity="center"
                android:text="@string/facebook_share"
                android:textColor="@android:color/white"
                android:textSize="18sp" 
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>