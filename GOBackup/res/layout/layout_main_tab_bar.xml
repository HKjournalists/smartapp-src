<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:background="@drawable/main_tab_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffececec"
            android:textSize="18sp" />
        
        <!--  
        <View android:id="@+id/usercenter_sperator"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/usercenter"
            android:background="@drawable/main_tab_divider" />
            
        <ImageButton
            android:id="@+id/usercenter"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/sperator"
            android:background="@drawable/tab_btn_bg"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scaleType="centerInside"
            android:src="@drawable/go_account_usercenter_btn"/>
           -->

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/tab_btn_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/setting_btn" />

        <View
            android:id="@+id/setting_sperator"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/setting"
            android:background="@drawable/main_tab_divider" />
        
        <ImageButton
            android:id="@+id/schedule_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/setting_sperator"
            android:background="@drawable/tab_btn_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/schedule_btn" />
        
        <View
            android:id="@+id/schedule_sperator"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/schedule_btn"
            android:background="@drawable/main_tab_divider" />
        
        <ImageButton
            android:id="@+id/test_upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/schedule_sperator"
            android:background="@drawable/tab_btn_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/schedule_btn" />
        
        <View
            android:id="@+id/test_upload_sperator"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/schedule_btn"
            android:background="@drawable/main_tab_divider" />
    </RelativeLayout>

