<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/title_bar_common_part" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/title_backup_content"
                android:textColor="#cc535353"
                android:textSize="13sp"
                android:singleLine="true"
                android:ellipsize="marquee" />

           <!--  <Spinner
                android:id="@+id/backup_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_bg"
                android:paddingLeft="6dp" /> -->
           <Button android:id="@+id/backup_content"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:textColor="#ff535353"
               android:textSize="16sp"
               android:minHeight="0dp"
               android:paddingLeft="6dp"
               android:gravity="left|center_vertical"
               android:background="@drawable/custom_spinner_bg" />
               

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:text="@string/title_backup_start_time"
                android:textColor="#cc535353"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/date_picker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_spinner_bg"
                    android:gravity="left|center_vertical"
                    android:minHeight="0dp"
                    android:paddingLeft="6dp"
                    android:textColor="#ff535353"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:background="@drawable/custom_spinner_bg"
                    android:gravity="left|center_vertical"
                    android:minHeight="0dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="50dp"
                    android:textColor="#ff535353"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:text="@string/title_repeat_mode"
                android:textColor="#cc535353"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/repeat_mode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_bg"
                android:paddingLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:text="@string/title_advance_remind"
                android:textColor="#cc535353"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/advance_remind"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_bg"
                android:paddingLeft="6dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/footer_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/light_round_button"
            android:gravity="center"
            android:minHeight="0dp"
            android:text="@string/cancel"
            android:textColor="#ff535353"
            android:textSize="17sp" />

<!--         <Button
            android:id="@+id/delete_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/light_round_button"
            android:gravity="center"
            android:minHeight="0dp"
            android:text="@string/delete"
            android:textColor="#ff535353"
            android:textSize="17sp" />
 -->
        <Button
            android:id="@+id/save_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/light_round_button"
            android:gravity="center"
            android:minHeight="0dp"
            android:text="@string/save"
            android:textColor="#ff535353"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>