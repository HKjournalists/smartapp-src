<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.escape.uninstaller.ui.ActionBarFrame
        android:id="@+id/actionbarframe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FF303537" >

            <LinearLayout
                android:id="@+id/sliding"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/search"
                android:background="@drawable/background_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/action_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="2dp"
                        android:background="@android:color/white" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/white" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:paddingLeft="3dp"
                    android:paddingRight="0dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="#ffffffff"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/search"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:layout_toLeftOf="@+id/sort"
                android:background="@drawable/background_selector"
                android:padding="7dp"
                android:src="@drawable/actionbar_search_icon"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sort"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/share"
                android:background="@drawable/background_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingRight="0dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="25.92dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white" />

                <ImageView
                    android:layout_width="17.01dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/white" />

                <ImageView
                    android:layout_width="8.1dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/share"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_selector"
                android:padding="10dp"
                android:src="@drawable/ic_action_share" />

            <LinearLayout
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toLeftOf="@+id/share"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/action_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp"
                    android:paddingRight="3dp" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/actionbar_up_indicator" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_bg_selector"
                    android:textCursorDrawable="@color/editcursor"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>
    </com.escape.uninstaller.ui.ActionBarFrame>

</LinearLayout>