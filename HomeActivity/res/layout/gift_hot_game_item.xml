<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/game_detail_provider"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="@dimen/game_icon"
            android:layout_height="@dimen/game_icon"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/gameIcon"
            android:layout_marginLeft="@dimen/app_frampadding"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/gameName"
                style="@style/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/giftNumber"
                android:layout_toRightOf="@id/gameIcon"
                android:layout_alignLeft="@id/gameName"
                android:layout_below="@id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:id="@+id/getGift"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/goto_item_style"
            android:text="@string/lingqu"
            />

    <ImageView
            android:src="@color/line_gray"
            android:layout_below="@id/gameIcon"
            android:layout_marginTop="@dimen/game_detail_provider"
            android:layout_marginBottom="@dimen/game_detail_provider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
</RelativeLayout>