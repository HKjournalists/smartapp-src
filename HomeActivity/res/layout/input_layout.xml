<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/face1"
            android:id="@+id/input_left_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/input_middle_edit"
            android:layout_toLeftOf="@+id/input_right_image"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/input_left_image"
            android:background="@color/white"
            />
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/face2"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:id="@+id/input_right_image"
            />


</RelativeLayout>