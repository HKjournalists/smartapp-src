<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/message_item_top"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_marginLeft="13dp"
            android:background="@color/dymaic_amount_bottom_land_line_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <ImageView
                android:id="@+id/message_item_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/qq_c" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dymaic_amount_bottom_land_line_color" >
            </View>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="2010-01-12"
            android:textColor="@color/no_read_date"
            android:textSize="13.5sp" />

        <com.youle.gamebox.ui.view.EmojiShowTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:textColor="@color/no_read_text"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal" >


                <TextView
                    android:id="@+id/check_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/line_yello"
                    android:textSize="15sp" />
 
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/xian" />
    </LinearLayout>

</LinearLayout>