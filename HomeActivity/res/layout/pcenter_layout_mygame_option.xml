<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:id="@+id/pc_mygame_option_linear"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@+id/pc_mygame_option_uninstall"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:id="@+id/pc_mygame_option_gzone"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="专区"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:id="@+id/pc_mygame_option_radius"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/pcenter_mygame_option_radius"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:id="@+id/pc_mygame_option_packs"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/pcenter_mygame_option_packs"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:id="@+id/pc_mygame_option_forum"
                      android:layout_weight="1"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/pcenter_mygame_option_forum"
                    />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_alignParentRight="true"
                      android:id="@+id/pc_mygame_option_uninstall"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/pcenter_mygame_option_uninstall"
                    />
        </LinearLayout>


</RelativeLayout>