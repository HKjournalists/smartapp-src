<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:gravity="center"
	android:padding="4dp"
	android:layout_height="match_parent">


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:id="@+id/dialog_check_message"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:background="@drawable/user_list_shap"
		android:padding="16dp"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="match_parent"
			android:layout_height="40dp"
            android:background="#7CBD2F"
            android:textColor="@color/white"
			android:text="@string/userinfo_photo_modfy_but_pz"
			android:id="@+id/dialog_check_login"/>

		<Button
			android:layout_width="match_parent"
			android:text="@string/userinfo_photo_modfy_but_bd"
            android:layout_height="40dp"
            android:background="@color/line_yello"
            android:textColor="@color/white"
			android:id="@+id/dialog_check_canle"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"/>
	</LinearLayout>

</LinearLayout>