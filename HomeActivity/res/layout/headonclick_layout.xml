<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/headonclick_layout_onclick"

              android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
     <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="我的游戏"
             android:layout_gravity="center"
             android:layout_marginTop="3dp"
             android:textSize="16sp"
             android:id="@+id/headonclick_layout_text"

             />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/headonclick_layout_falg"

                />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dip"
          android:background="#112332"
          android:id="@+id/headonclick_layout_view"
          android:layout_marginTop="5dip"
            ></View>

</LinearLayout>