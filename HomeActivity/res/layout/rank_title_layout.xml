<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="@dimen/app_frampadding"
              android:background="@drawable/title_head_bg"
              android:layout_height="48dp">

    <RelativeLayout
            android:id="@+id/rankShowLeft"
            android:layout_width="35dp"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/left_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_alignParentRight="true"
                android:background="@drawable/title_num_text_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/title"
            style="@style/title_style"
            android:text="游乐游戏中心"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_toRightOf="@id/rankShowLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/titleSerch"
                    android:src="@drawable/title_serch_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:id="@+id/downLoadManager"
                    android:layout_width="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/title_download_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:background="@drawable/title_num_text_bg"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>