<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Dot -->
    <style name="Dot">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:src">@drawable/dot</item>
    </style>

    <style name="detail_classify_title_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tab_selector</item>
    </style>
    
    <style name="app_manage_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_small_drawable</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="bigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_large_drawable</item>
        <item name="android:minHeight">20.5dip</item>
        <item name="android:maxHeight">20.5dip</item>
        <item name="android:isIndicator">false</item>
    </style>   

    <style name="feature_button">
        <item name="android:textSize">@dimen/feature_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="feature_icon">
        <item name="android:layout_width">15sp</item>
        <item name="android:layout_height">15sp</item>
    </style>

    <style name="progressBar_loading" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/game_loading</item>
        <item name="android:maxHeight">65dip</item>
        <item name="android:maxWidth">65dip</item>
        <item name="android:minWidth">65dip</item>
        <item name="android:minHeight">65dip</item>
    </style>

    <style name="small_progressBar_loading" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/small_loading</item>
        <item name="android:maxHeight">45dip</item>
        <item name="android:maxWidth">45dip</item>
        <item name="android:minWidth">45dip</item>
        <item name="android:minHeight">45dip</item>
    </style>

    <style name="youle_bg">
        <item name="android:background">@drawable/bg_000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="text_style_shadow">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="youle_custom_dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 开关 -->
    <style name="ToggleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/toggle_button_selector</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <!-- 侧边栏 -->
    <style name="TextView_Main_Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainmenu_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TextView2_Main_Drawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFa6a6a6</item>
    </style>

    <style name="Dialog_Main_Drawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="ProgessBar_Main_Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/jindutiao_bg</item>
        <item name="android:progressDrawable">@drawable/sdcard_progress_layer</item>
        <item name="android:max">100</item>
        <item name="android:maxHeight">15dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="Widget_ProgressBar_Small">
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal1</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="grid_view_style">
        <item name="android:verticalSpacing">10dip</item>
        <item name="android:horizontalSpacing">5dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingBottom">7dip</item>
    </style>

    <style name="grid_view_categories_style">
        <item name="android:verticalSpacing">10dip</item>
        <item name="android:horizontalSpacing">10dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:paddingBottom">7dip</item>
    </style>

</resources>