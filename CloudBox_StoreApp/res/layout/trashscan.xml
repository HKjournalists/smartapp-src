<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header_title_layout" />

    <FrameLayout
        android:id="@+id/have_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/scanning"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:background="#f8f8f8"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/path"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="middle"
                        android:singleLine="true" />

                    <ProgressBar
                        android:id="@+id/progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="13dip"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8.0dip"
                        android:max="100"
                        android:progressDrawable="@drawable/textprogressbar_notification" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/all_total"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:background="#f8f8f8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/apk_manager_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
                        android:text="共"
                        android:textColor="@color/left_menu_text" />

                    <TextView
                        android:id="@+id/ge_total"
                        style="@style/apk_manager_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textColor="#ff7000" />

                    <TextView
                        style="@style/apk_manager_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个缓存垃圾，清理可节省存储空间"
                        android:textColor="@color/left_menu_text" />

                    <TextView
                        android:id="@+id/size"
                        style="@style/apk_manager_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="673MB"
                        android:textColor="#ff7000" />
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ededed" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:scrollbars="none" >
            </ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#ededed" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#f8f8f8"
                android:paddingBottom="6dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp" >

                <ImageView
                    android:id="@+id/check_box"
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5.0dip"
                    android:paddingRight="20dp"
                    android:src="@drawable/check_box_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/check_box"
                    android:singleLine="true"
                    android:text="全选"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/a_key"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/btn_copy_selector"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/all_clear"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smiling_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="赞！没有残留文件！"
                android:textColor="#FF737373"
                android:textSize="18dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>