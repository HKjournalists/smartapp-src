                    android:textColor="@color/download_status_wait"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/gap2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FFf5f5f5" />

