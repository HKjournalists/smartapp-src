<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingTop="5dp" >

        <View
            android:layout_width="1.5dp"
            android:layout_height="15dp"
            android:background="#FF32b5e6" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:text="应用"
            android:textColor="#FF555555"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/title_gap"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFe5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/app1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/homefeature_item_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="@dimen/game_photoSize"
                android:layout_height="@dimen/game_photoSize"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="装机大师"
                android:textColor="#FF545454"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/download_btn1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/download_iv"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:src="@drawable/wait" />

                <TextView
                    android:id="@+id/start_update_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5.0dip"
                    android:text="下载"
                    android:textColor="@color/download_status_wait"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/gap1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FFf5f5f5" />

        <LinearLayout
            android:id="@+id/app2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/homefeature_item_selector"
