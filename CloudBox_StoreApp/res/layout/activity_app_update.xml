<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include  layout="@layout/header_title_layout"/>
    
    <LinearLayout
        android:id="@+id/home_liear_pro"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_liear_connent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/no_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="85.3333333dp"
                android:layout_height="85.3333333dp"
                android:src="@drawable/smiling_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="恭喜！您的应用都是最新版本的，不用更新！"
                android:textColor="#FF919191"
                android:textSize="16dp" />

            <Button
                android:id="@+id/jump"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_copy_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/update_show_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"           
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="#f8f8f8"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+id/update_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="可升级应用("
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/app_update_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3.0dip"
                    android:layout_toRightOf="@id/update_a"
                    android:text="10"
                    android:textColor="#ff7000"
                    android:textSize="18sp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/app_update_total"
                    android:layout_centerInParent="true"
                    android:text=" )"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/app_update_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8.0dip"
                    android:background="@drawable/btn_green_selector"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="全部升级"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#ededed" />

            <ListView
                android:id="@+id/app_update_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="3.0dip"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/personal_login_line_heng"
                android:listSelector="#00000000" />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
