            android:background="@drawable/btn_menu_game_selector"
            android:layout_weight="1">
            
            <ImageView 
                android:src="@drawable/menu_icon2"
                 style="@style/feature_icon"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_height="wrap_content"
                android:text="精品游戏"
                style="@style/feature_button"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/feature_navigate_subject"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:focusable="true"
            android:background="@drawable/btn_menu_subject_selector"
            android:layout_weight="1">
            
            <ImageView 
               style="@style/feature_icon"
                android:src="@drawable/menu_icon3"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text="专　题"
                style="@style/feature_button"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/feature_navigate_rank"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:gravity="center"
            android:focusable="true"
            android:orientation="horizontal"
            android:background="@drawable/btn_menu_rank_selector"
            android:layout_weight="1">
            
            <ImageView 
                style="@style/feature_icon"
                android:src="@drawable/menu_icon4"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text="排　行"
                style="@style/feature_button"/>
