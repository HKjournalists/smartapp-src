<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recommend_layout_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
        android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
        android:layout_marginTop="@dimen/activity_layout_marginSmallTop"
        android:background="@drawable/item_bg_default"
        android:focusable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/download_item_selector"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/item_recommend_image"
                android:layout_width="@dimen/game_iconSize"
                android:layout_height="@dimen/game_iconSize"
                android:layout_centerVertical="true"
                android:layout_margin="5dip"
                android:src="@drawable/logo_shikong" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_toRightOf="@+id/item_recommend_image"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_recommend_appname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.0"
                        android:singleLine="true"
                        android:text="高德地图"
                        android:textColor="@color/black"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="3194KB/S"
                        android:textColor="#FF8fc31f"
                        android:textSize="13dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_recommend_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="67.75MB"
                    android:textColor="#FF747474"
                    android:textSize="@dimen/gameinfoText"
                    android:textStyle="normal" >
                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/devide_view"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/grey_down_icon" />

            <View
                android:id="@+id/devide_view"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_recommend_download"
                android:background="#FFeeeeee" />

            <Button
                android:id="@+id/item_recommend_download"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/icon_download"
                android:focusable="false"
                android:text="下载"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/gap"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFeeeeee" />

        <LinearLayout
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/redownload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/download_item_selector" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="12dp" >

                    <ImageView
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/g_refresh_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:text="@string/btn_redownload"
                        android:textColor="#545454"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/download_item_selector" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="12dp" >

                    <ImageView
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/g_delete_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:text="@string/btn_delete"
                        android:textColor="#545454"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</LinearLayout>