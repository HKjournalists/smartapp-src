<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recommend_layout_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
        android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
        android:layout_marginTop="@dimen/activity_layout_marginSmallTop"
        android:background="@drawable/btn_item_selector"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_recommend_image"
                android:layout_width="@dimen/game_photoSize"
                android:layout_height="@dimen/game_photoSize"
                android:layout_centerVertical="true"
                android:layout_margin="5dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/devide_view"
                android:layout_toRightOf="@+id/item_recommend_image"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/item_recommend_appname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/item_recommend_size"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3.0dip"
                        android:singleLine="true"
                        android:text="山水问题-3G省钱电话"
                        android:textColor="@color/black"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_recommend_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="66.5MB"
                        android:textColor="#989898"
                        android:textSize="@dimen/gameinfoText"
                        android:textStyle="normal" >
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <RatingBar
                        android:id="@+id/item_recommend_rating"
                        style="@style/smallRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3.0dip"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5" />

                    <TextView
                        android:id="@+id/item_recommend_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2000次下载"
                        android:textColor="#989898"
                        android:textSize="@dimen/gameinfoText"
                        android:textStyle="normal" >
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/devide_view"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_recommend_download"
                android:background="#EDEDED" />

            <Button
                android:id="@+id/item_recommend_download"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/icon_download"
                android:focusable="false"
                android:text=""
                android:textColor="#616161"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_recommend_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="3.0dip"
            android:singleLine="true"
            android:text=""
            android:textColor="#989898"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>