<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/person_app_probar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ProgressBar
                style="@style/progressBar_loading"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_app_home"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/header_title_layout" />

        <LinearLayout
            android:id="@+id/no_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"  >

            <ImageView
                android:layout_width="85.3333333dp"
                android:layout_height="85.3333333dp"
                android:src="@drawable/nothing_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="未发现已删除的系统程序"
                android:textColor="#FF737373"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="已删除的系统程序可在此还原"
                android:textColor="#FF737373"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/have_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/recyle_listview"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/personal_login_line_heng"
                android:listSelector="#00000000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#f8f8f8" >
                <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentTop="true"
                android:background="#ededed" />

                <ToggleButton
                    android:id="@+id/recyle_togbtn_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:background="@null"
                    android:drawableLeft="@drawable/check_box_selector"
                    android:textColor="#888888"
                    android:textOff="@string/speed_all"
                    android:textOn="@string/speed_all" />

                <Button
                    android:id="@+id/recyle_btn_restore"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.0dip"
                    android:layout_toLeftOf="@+id/recyle_btn_forever_delete"
                    android:background="@drawable/btn_green_selector"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:text="@string/all_restore"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/recyle_btn_forever_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/btn_copy_selector"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:text="@string/all_forever_delete"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>