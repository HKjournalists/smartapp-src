<?xml version="1.0" encoding="utf-8"?>
<com.zhidian.wifibox.view.MainDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/repeat_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg_main_drawer"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/system_settting_im"
                    android:layout_width="28dp"
                    android:layout_height="31dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/set_icon" />

                <TextView
                    android:id="@+id/system_settting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/system_settting_im"
                    android:paddingLeft="3dp"
                    android:text="@string/system_settting"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp" >

                <RelativeLayout
                    android:id="@+id/fountion_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/memory_main_drawer"
                        android:textColor="#FFa6a6a6"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/memory_pb"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="13dip"
                        android:layout_below="@id/memory_tv"
                        android:layout_marginRight="12.0dip"
                        android:layout_marginTop="3dp"
                        android:progressDrawable="@drawable/sdcard_progress_layer" />

                    <TextView
                        android:id="@+id/memory_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:textColor="#828282"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/memory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/memory_total_tv"
                        android:text="@string/separator_main_drawer"
                        android:textColor="#828282"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/memory_free_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/memory_tv"
                        android:textColor="#1653A0"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sd_memory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memory_pb"
                        android:layout_marginTop="15dp"
                        android:text="@string/sd_main_drawer"
                        android:textColor="#FFa6a6a6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sd_memory_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/memory_pb"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#828282"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sd_memory_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memory_pb"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@id/sd_memory_total_tv"
                        android:text="@string/separator_main_drawer"
                        android:textColor="#828282"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sd_memory_free_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/memory_pb"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@id/sd_memory_tv"
                        android:textColor="#1653A0"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/sd_memory_pb"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="13dip"
                        android:layout_below="@id/sd_memory_tv"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12.0dip"
                        android:layout_marginTop="3dp"
                        android:progressDrawable="@drawable/sdcard_progress_layer" >
                    </ProgressBar>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/download_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp" >

                    <ToggleButton
                        android:id="@+id/install_after_download_tb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/toggle_button_selector"
                        android:textOff="   "
                        android:textOn="  " />

                    <TextView
                        style="@style/TextView2_Main_Drawer"
                        android:layout_alignTop="@id/install_after_download_tb"
                        android:text="@string/install_after_download_main_drawer" />

                    <ToggleButton
                        android:id="@+id/delete_after_install_tb"
                        style="@style/ToggleBar"
                        android:layout_below="@id/install_after_download_tb" />

                    <TextView
                        style="@style/TextView2_Main_Drawer"
                        android:layout_alignTop="@id/delete_after_install_tb"
                        android:text="@string/delete_after_install_main_drawer" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/about_us_tv"
                        style="@style/TextView_Main_Drawer"
                        android:text="@string/about_us_main_drawer" />

                    <TextView
                        android:id="@+id/feedback_tv"
                        style="@style/TextView_Main_Drawer"
                        android:text="@string/feedback_main_drawer" />

                    <TextView
                        android:id="@+id/imprint_tv"
                        style="@style/TextView_Main_Drawer"
                        android:text="@string/imprint_main_drawer" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</com.zhidian.wifibox.view.MainDrawer>